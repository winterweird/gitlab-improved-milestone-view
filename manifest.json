{
  "manifest_version": 3,
  "name": "GitLab Milestone Restructure",
  "version": "1.0",
  "description": "Restructures GitLab milestone issue boards to group parent and child issues.",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["https://gitlab.com/*"],
  "action": {
    "default_title": "GitLab Milestone Restructure",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/upstacked/upstacked/-/boards/*",
        "https://gitlab.com/upstacked/upstacked/-/milestones/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
